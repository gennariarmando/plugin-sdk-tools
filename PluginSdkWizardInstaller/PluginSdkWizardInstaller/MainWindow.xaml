<Window x:Class="PluginSdkWizardInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PluginSdkWizardInstaller"
        mc:Ignorable="d"
        Title="Plugin-SDK Wizard v1.0" Width="800" Height="594" MinWidth="400" MinHeight="300" Icon="/Icons/packageicon.ico" WindowStartupLocation="CenterScreen" SizeToContent="Manual" WindowState="Normal" BorderThickness="0"
        GotKeyboardFocus="Window_GotKeyboardFocus" IsVisibleChanged="Window_IsVisibleChanged">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <ScrollViewer.Resources>
            <Style TargetType="{x:Type Expander}">
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                <Setter Property="Margin" Value="2,6,2,6"/>
                <Setter Property="Padding" Value="6"/>
            </Style>
        </ScrollViewer.Resources>

        <StackPanel Margin="4">
            <Image Source="/Icons/psdk.png" Height="30" Margin="0"/>

            <Expander x:Name="stepGroup_envVars">
                <Expander.Header>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="1. Setup Plugin-SDK environment variables" FontSize="16" Padding="4, 0"/>
                        <Image x:Name="stepGroup_envVarsIcon" Height="16"/>
                    </StackPanel>
                </Expander.Header>

                <StackPanel x:Name="pathsStack"/>
            </Expander>

            <Expander x:Name="stepGroup_generateSolution" IsEnabled="False">
                <Expander.Header>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="2. Generate Plugin-SDK project" FontSize="16" Padding="4, 0"/>
                        <Image x:Name="stepGroup_generateSolutionIcon" Height="16"/>
                    </StackPanel>
                </Expander.Header>
                <Grid local:GridSpacingSetter.Spacing="3,3,3,3" ToolTipService.ShowOnDisabled="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="1" Click="btnGenerateSlnVS_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Height="16" Source="/Icons/vs2022.png"/>
                            <Label Content="Visual Studio"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Expander>

            <Expander x:Name="stepGroup_build" IsEnabled="False">
                <Expander.Header>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="3. Build Plugin-SDK binaries" FontSize="16" Padding="4, 0"/>
                        <Image x:Name="stepGroup_buildIcon" Height="16"/>
                    </StackPanel>
                </Expander.Header>

                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Label Content="Target game"            Grid.Row="0" Grid.Column="0"/>
                        <Label Content="Debug configuration"    Grid.Row="0" Grid.Column="1"/>
                        <Label Content="Release configuration"  Grid.Row="0" Grid.Column="2"/>
                    </Grid>

                    <StackPanel x:Name="buildConfigurationStack"/>

                    <Grid x:Name="stepGroup_buildButtonsGrid" local:GridSpacingSetter.Spacing="3,3,3,3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Button Click="stepGroup_buildVsBtnClick" Grid.Column="1">
                            <StackPanel Orientation="Horizontal">
                                <Image Height="16" Source="/Icons/vs2022.png"/>
                                <Label Content="Visual Studio"/>
                                <Label x:Name="stepGroup_buildVsBtnLbl" Content="(0)"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>
            </Expander>

            <Expander x:Name="stepGroup_createPlugin" IsEnabled="False">
                <Expander.Header>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="4. Create your new plugin project" FontSize="16" Padding="4, 0"/>
                        <Image x:Name="stepGroup_createPluginIcon" Height="16"/>
                    </StackPanel>
                </Expander.Header>
                <Grid local:GridSpacingSetter.Spacing="3,3,3,3">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" x:Name="pluginNameGrp">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label   Grid.Column="0" Content="Plugin name"/>
                        <TextBox Grid.Column="1" x:Name="pluginNameTbx" Text="MyPlugin" TextChanged="pluginNameTbx_TextChanged"/>
                        <Image   Grid.Column="2" x:Name="pluginNameStatusImg" Height="16" Source="/Icons/nothing.png"/>
                    </Grid>

                    <Separator Grid.Row="1"/>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Vertical">
                            <Label Content="Target games"/>
                            <UniformGrid Grid.Row="3" x:Name="createPluginTargetContainer" Columns="1"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Vertical">
                            <Label Content="Additional options"/>
                            <UniformGrid x:Name="createPluginPropertiesContainer" Columns="1"/>
                        </StackPanel>
                    </Grid>
                    
                    <Separator Grid.Row="3"/>

                    <Grid Grid.Row="4" x:Name="stepGroup_createPluginButtonsGrid" ToolTipService.ShowOnDisabled="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Button Click="stepGroup_createPluginVsBtnClick" Grid.Column="1">
                            <StackPanel Orientation="Horizontal">
                                <Image Height="16" Source="/Icons/vs2022.png"/>
                                <Label Content="Visual Studio"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Grid>
            </Expander>
        </StackPanel>
    </ScrollViewer>
</Window>
