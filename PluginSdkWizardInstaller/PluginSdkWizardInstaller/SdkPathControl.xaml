<UserControl x:Class="PluginSdkWizardInstaller.SdkPathControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PluginSdkWizardInstaller"
             mc:Ignorable="d" d:DesignWidth="600"
             IsVisibleChanged="self_IsVisibleChanged">
    <UserControl.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Width" Value="34"/>
        </Style>
        <Style TargetType="{x:Type Image}">
            <Setter Property="Height" Value="16"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid local:GridSpacingSetter.Spacing="3,6,3,6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="nameClmn"/>
            <ColumnDefinition x:Name="varNameClmn"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Label   Grid.Column="0" x:Name="nameLbl"/>

        <Label   Grid.Column="1" x:Name="varNameLbl" HorizontalContentAlignment="Right" ToolTip="Environment Variable name"/>

        <TextBox Grid.Column="2" x:Name="pathTbx" TextChanged="pathTbx_TextChanged" KeyDown="pathTbx_KeyDown"/>

        <Button  Grid.Column="3" x:Name="infoBtn"   Content="?" ToolTip="Get more information" Click="infoBtn_Click" Visibility="Collapsed"/>
        
        <Button  Grid.Column="4" Content="..." ToolTip="Browse..." Click="browseBtn_Click"/>

        <Button  Grid.Column="5" x:Name="setBtn" Content="Set" ToolTip="Apply changes" Click="setBtn_Click" IsEnabled="False"/>

        <Image   Grid.Column="6" x:Name="statusImg"  Source="/Icons/nothing.png"/>
    </Grid>
</UserControl>
