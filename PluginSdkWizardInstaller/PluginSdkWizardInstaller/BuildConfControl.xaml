<UserControl x:Class="PluginSdkWizardInstaller.BuildConfControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PluginSdkWizardInstaller"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800" IsVisibleChanged="UserControl_IsVisibleChanged">

    <Grid local:GridSpacingSetter.Spacing="3,3,3,3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" x:Name="nameLbl"/>

        <StackPanel Grid.Column="1" Orientation="Horizontal" MouseDown="Debug_MouseDown">
            <Image x:Name="debugImage" Height="12" Margin="0,0,6,0"/>
            <CheckBox x:Name="debugCheckbox" Checked="CheckBox_Changed" Unchecked="CheckBox_Changed"/>
            <Label x:Name="debugLabel"/>
        </StackPanel>

        <StackPanel Grid.Column="2" Orientation="Horizontal" MouseDown="Release_MouseDown">
            <Image x:Name="releaseImage" Height="12" Margin="0,0,6,0"/>
            <CheckBox x:Name="releaseCheckbox" Checked="CheckBox_Changed" Unchecked="CheckBox_Changed"/>
            <Label x:Name="releaseLabel"/>
        </StackPanel>
    </Grid>
</UserControl>
